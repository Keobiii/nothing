void _showQuickAlert(BuildContext context) {
    if (!_isAlertVisible) {
      setState(() {
        _isAlertVisible = true;
      });

      // Triggering the QuickAlert dialog
      QuickAlert.show(
        context: context, 
        type: QuickAlertType.confirm, // You can choose other types like success, error, etc.
        text: "Are you sure to save this data?",
        onConfirmBtnTap: () {
          setState(() {
            _isAlertVisible = false;
          });
          Navigator.of(context).pop(); // Dismiss the alert
        },
        onCancelBtnTap: () {
          setState(() {
            _isAlertVisible = false;
          });
          Navigator.of(context).pop(); // Dismiss the alert
        },
      );
    }
  }
