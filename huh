import 'package:flutter/material.dart';
import 'package:quickalert/quickalert.dart';

class QuickAlertManager extends StatefulWidget {
  const QuickAlertManager({Key? key}) : super(key: key);

  @override
  _QuickAlertManagerState createState() => _QuickAlertManagerState();
}

class _QuickAlertManagerState extends State<QuickAlertManager> {
  // You could technically use state here, but it's unnecessary for this use case.
  
  @override
  Widget build(BuildContext context) {
    return Container(); // No UI needed here
  }

  // This function could still show the QuickAlert, but no state is involved.
  void showQuickAlert({
    required BuildContext context,
    required QuickAlertType alertType,
    required String text,
  }) {
    QuickAlert.show(
      context: context,
      type: alertType,
      text: text,
    );
  }
}
