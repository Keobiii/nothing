BlocBuilder<CartBloc, CartState>(
            builder: (context, state) {
              if (state is CartLoaded) {
                final product = state.cart;

                return Text(
                  'Left: ${}'
                );
              } else {
                return Text(
                  'Out of Stock',
                  style: TextStyle(color: Colors.red),
                );
              }
            },
          ) 
